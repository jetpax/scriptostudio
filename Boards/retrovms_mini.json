{
  "identity": {
    "id": "retrovms_mini",
    "name": "RetroVMS Mini",
    "vendor": "retrovms",
    "chip": "ESP32-S3",
    "revision": "2.0.0",
    "description": "Vehicle control module with 24 inputs, 12 outputs, and CAN bus"
  },

  "capabilities": {
    "can": true,
    "spi": true,
    "i2c": true,
    "neopixel": true,,
    "status_led": true,
    "digital_inputs": true,
    "digital_outputs": true
  },

  "resources": {
    "pins": {
      "status_led": 48
    },

    "can": {
      "can0": {
        "tx": 4,
        "rx": 5,
        "standby": 6
      }
    },

    "spi": {
      "spi1": {
        "miso": 13,
        "mosi": 11,
        "sclk": 12
      }
    },

    "i2c": {
      "i2c0": {
        "sda": 8,
        "scl": 9
      }
    }
  },

  "devices": {
    "status_led": {
      "type": "neopixel",
      "pixel_order": "GRB",
      "description": "Onboard RGB status LED - GRB order"
    },

    "tic12400_inputs": {
      "type": "TIC12400",
      "driver": "TIC12400",
      "bus": "spi1",
      "cs_pin": 15,
      "channels": 24,
      "description": "24-channel digital input IC"
    },

    "drv8912_outputs": {
      "type": "DRV8912",
      "driver": "DRV8912",
      "bus": "spi1",
      "cs_pin": 16,
      "channels": 12,
      "description": "12-channel half-bridge output driver"
    }
  }
}
