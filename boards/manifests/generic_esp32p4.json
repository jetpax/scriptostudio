{
  "identity": {
    "id": "generic_esp32p4",
    "name": "Generic ESP32-P4",
    "vendor": "espressif",
    "chip": "ESP32-P4",
    "revision": "1.0.0",
    "description": "Generic ESP32-P4 dev board with C6 WiFi coprocessor"
  },

  "network": {
    "mdns_enabled": true,
    "ap_password": null,
    "default_services": ["http", "webrepl"]
  },

  "capabilities": {
    "ethernet": true,
    "wifi": true,
    "can": true,
    "sdcard": true,
    "audio": true,
    "neopixel": true,
    "status_led": true
  },

  "resources": {
    "pins": {
      "status_led": 1,
      "boot": 35
    },

    "uart": {
      "primary": {
        "tx": 37,
        "rx": 38
      }
    },

    "i2c": {
      "i2c0": {
        "sda": 7,
        "scl": 8
      }
    },

    "can": {
      "twai": {
        "tx": 20,
        "rx": 21
      }
    },

    "sdmmc": {
      "sdcard": {
        "cmd": 44,
        "clk": 43,
        "d0": 39,
        "d1": 40,
        "d2": 41,
        "d3": 42
      }
    }
  },

  "devices": {
    "ethernet": {
      "phy": "IP101",
      "interface": "rmii",
      "phy_addr": 1,
      "pins": {
        "mdc": 31,
        "mdio": 52,
        "reset": 51
      },
      "description": "IP101 Ethernet PHY with RMII interface"
    },

    "status_led": {
      "type": "neopixel",
      "pixel_order": "RGB",
      "description": "Onboard Neopixel - RGB order"
    },

    "sdcard": {
      "mode": "SDMMC",
      "power_control": {
        "pin": 45,
        "active_low": true
      },
      "description": "SD card slot"
    }
  }
}
